/* Tell Quill not to scroll */

#editor {
    height: auto;
    min-height: 300px;
    padding: 0px;
    border: none;
    font-family: inherit;

    .ql-editor {
        overflow-y: visible;
        padding: 12px 0px;
        min-height: 100vh;
        padding-bottom: 400px;
        line-height: 1.7;
    }
}

.ql-container {
    font-size: 16px !important;
}

/* Specify our own scrolling container */

#quill-container {
    height: 100%;
    min-height: 100%;
    overflow-y: auto;

